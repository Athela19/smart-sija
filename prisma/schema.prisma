generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  MURID
  GURU
  ADMIN
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  password     String
  status       UserStatus @default(MURID)
  otp          String?
  otpExpiresAt DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Statistik {
  id      Int @id @default(autoincrement())
  ruangan Int
  guru    Int
  siswa   Int
  mapel   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produk {
  id         Int      @id @default(autoincrement())
  nama       String
  deskripsi  String
  pembuat    String
  foto       String   // URL atau path ke file foto
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Dokumentasi {
  id       Int     @id @default(autoincrement())
  title    String
  foto1    String
  foto2    String
  foto3    String
  foto4    String
  foto5    String
  foto6    String
  createdAt DateTime @default(now())
}
